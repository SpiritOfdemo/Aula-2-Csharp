<Page x:Class="Aula_2.Pagina1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aula_2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pagina1">

    <Grid Background="White">
        <Button x:Name="BotaoNext" Content="Next" HorizontalAlignment="Left" VerticalAlignment="Top" Width="169" Margin="524,319,0,0" Height="51" Click="BotaoNext_Click" IsEnabled="{Binding ElementName=accept, Path=IsChecked}"/>
        <Label HorizontalAlignment="Left" Height="173" FontSize="40" Content="Deseja passar o cu pro meu nome?" VerticalAlignment="Top" Width="663" Margin="71,98,0,0"/>
        <CheckBox x:Name="accept"  Content="Eu aceito" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="71,319,0,0" Height="51" Width="380"/>

    </Grid>
</Page>
